{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="container-fluide">
<h1>Exercice Symfony et Twig</h1>
    <section class='affichage_btn'>
        <h5>Lien vers les détails</h5>
        <a href='{{path('article_detail', {'id':'1'})}}' class='btn btn-secondary'>Article 1 </a>
        <a href='{{path('article_detail', {'id':'2'})}}' class='btn btn-secondary'>Article 2 </a>
        <a href='{{path('article_detail', {'id':'3'})}}' class='btn btn-secondary'>Article 3 </a>
    </section>
    <section class='creation_art'>
        <h5>Cliquez ici pour créer un nouvel article</h5>
        <a href='{{path('creation_article')}}' class='btn btn-secondary'>Créer un nouvel article</a>
    </section>
    <section class='creation_cat'>
        <h5>Cliquez ici pour créer une nouvelle Categorie</h5>
        <a href='{{path('cat_form')}}' class='btn btn-secondary'>Créer une nouvelle Categorie</a>
    </section>
    <section class='art_magique'>
        <h5>Affichage des articles magiques</h5>
        <a href='{{path('article_magique')}}' class='btn btn-secondary'>Les articles magiques</a>
    </section>
    <section class='art_year'>
        <h5>Années de création choisie: </h5>
        <a href='{{path('article_year', {year: '2015'})}}' class='btn btn-secondary'>2015</a>
        <a href='{{path('article_year', {year: '2018'})}}' class='btn btn-secondary'>2018</a>
        <a href='{{path('article_year', {year: '2021'})}}' class='btn btn-secondary'>2021</a>
    </section>
</div>

{% endblock %}
